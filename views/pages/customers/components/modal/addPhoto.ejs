<div class="modal fade" id="addPhoto" tabindex="-1" role="dialog" aria-labelledby="PhotoLabel" aria-hidden="true">
    <div class="modal-dialog" role="photo">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="PhotoLabel">Adicionar imagem ao cliente</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body" style="padding: 40px;">
                <form method="post">
                    <div class="mb-3">

                        <input type="text" name="type" value="ADD_PHOTO" style="display: none;">
                        <input id="inputFile" accept="image/png, image/jpeg" multiple type="file" onchange="convertToBase64();"
                            style="margin-top: 20px" />
                        <input type="text" name="documentBase64" id="documentBase64" value="[]" style="display: none;">
                    </div>
                    <button class="btn btn-primary" style="width: 100%;" type="submit">Adicionar Imagens</button>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    function convertToBase64() {
        const files = document.getElementById("inputFile").files;
        const storeBase64 = document.getElementById('documentBase64');
        let storageToJson = [];

        for (let file of files) {
            let fileReader = new FileReader();

            fileReader.onload = function (fileLoadedEvent) {
                storageToJson.push(fileLoadedEvent.target.result);
                storeBase64.value = JSON.stringify(storageToJson);
            };

            fileReader.readAsDataURL(file);
        }
    }

</script>